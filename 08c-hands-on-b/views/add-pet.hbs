{{#extends "base"}}

{{#block "content"}}
<h1>Add new pet</h1>
<form method="POST">
    <div>
        <label for="petName">Pet Name:</label>
        <input type="text" class="form-control" name="name"/>
    </div>
    <div>
        <label for="breed">Breed:</label>
        <input type="text" class="form-control" name="breed"/>
    </div>
    <div>
        <label for="description">Description:</label>
        <input type="text" class="form-control" name="description"/>
    </div>
    <div>
        <label for="age">Age:</label>
        <input type="number" class="form-control" name="age"/>
    </div>
    <div>
        <label for="problems">Problems [separate problems by comma]:</label>
        <input type="text" class="form-control" name="problems"/>
    </div>
    <div>
        <h6>HDB Approved</h6>
        <input type="radio" class="form-check-input" name="hdb" id="yes" value="yes">
        <label for="yes">Yes</label>
        <input type="radio" class="form-check-input" name="hdb" id="no" value="no">
        <label for="yes">No</label>
    </div>
    <div>
        <h6>Tags</h6>
        <input name="tags" class="form-check-input" type="checkbox" value="House Broken"/>
        <label class="form-check-label">House broken</label>
        <input name="tags" class="form-check-input" type="checkbox" value="Vaccinated"/>
        <label class="form-check-label">Vaccinated</label>
        <input name="tags" class="form-check-input" type="checkbox" value="Chipped and Fixed"/>
        <label class="form-check-label">Chipped and fixed</label>
    </div>
    <div>
        <input type="submit" class="btn btn-primary mt-3"/>
    </div>
    
</form>

{{/block}}

{{/extends}}