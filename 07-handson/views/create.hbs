{{#extends "base"}}
{{#block "content"}}

<h1>Create a new movie entry</h1>
<form method="POST">
    <div>
        <label>Title of the movie</label>
        <input type="text" class="form-control" name="title" placeholder="Title">
    </div>
    <div>
        <label>Describe the plot of the movie</label>
        <input type="text" class="form-control" name="plot" placeholder="Plot">
    </div>
    <input type="submit" class="btn btn-primary mt-3">
</form>

{{/block}}
{{/extends}}